
<% title "Faqs" %>

<table>
  <% for faq in @faqs %>
    <tr>
     <td>Topic: <%= link_to faq.topic,faq %><br></td>
    <% if user_signed_in? %>
      <td><%= link_to "Show", faq %></td>
      <td><%= link_to "Edit", edit_faq_path(faq) %></td>
      <td><%= link_to "Destroy", faq, :confirm => 'Are you sure?', :method => :delete %></td>
	<% end %>
    
  <% end %>
</table>
<% if user_signed_in? %>
<p><%= link_to "New Faq", new_faq_path %></p>
<% end %>

