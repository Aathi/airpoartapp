<% title "Locations" %>

<table class="table table-striped">
  <tr>
    <th> Airpoart Name</th>
    <% if user_signed_in? %>
    <th> Actions </th>
    <%end%>
    <th>  </th>    
  </tr>
  <% for location in @locations %>
    <tr>
      <td><%= link_to location.air_name,location %></td>
     
      
	<% if user_signed_in? %>
      <td><%= link_to "Edit", edit_location_path(location) %></td>
      <td><%= link_to "Destroy", location, :confirm => 'Are you sure?', :method => :delete %></td>
	<%end%>
    </tr>
  <% end %>
</table>
<% if user_signed_in? %>
<p><%= link_to "Create New", new_location_path, :class => "btn btn-info" %></p>
<% end %>

