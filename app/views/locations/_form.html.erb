<%= form_for @location do |f| %>
<div class="container">
  <%= f.error_messages %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :air_name %>
  </p>
  <p>
    <%= f.label :code %><br />
    <%= f.text_field :air_code %>
  </p>
  <p>
    <%= f.label :contactnumber %><br />
    <%= f.text_field :air_contactnumber %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_area :air_address, class: "span6" %>
  </p>
  <p>
    <%= f.label :postcode %><br />
    <%= f.text_field :air_postcode %>
  </p>
  <p>
    <%= f.label :descriptions %><br />
    <%= f.text_area :air_descriptions, class: "span9" %>
  </p>
  <p>
    <%= f.label :factandfigures %><br />
    <%= f.text_area :air_factandfigures, class: "span9" %>
  </p>
  <p>
    <%= f.label :destination %><br />
    <%= f.text_area :air_destination, class: "span9" %>
  </p>
  <p>
    <%= f.label :parking %><br />
    <%= f.text_area :air_parking, class: "span9" %>
  </p>
  <p>
    <%= f.label :history %><br />
    <%= f.text_area :air_history, class: "span9" %>
  </p>
  <p>
    <%= f.label :hotels %><br />
    <%= f.text_area :air_hotels, class: "span9" %>
  </p>
  <p>
    <%= f.label :directions %><br />
    <%= f.text_area :air_directions, class: "span9" %>
  </p>
  <p><%= f.submit :class => 'btn btn-primary'  %></p>
</div>
<% end %>




